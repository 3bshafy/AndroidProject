<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.todonotepad">

    <application
        android:allowBackup="true"
        android:icon="@drawable/to_do_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/to_do_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoNotePad">
        <activity android:name=".AboutUsScreenActivity"></activity>
        <activity android:name=".AddNote" />
        <activity android:name=".Edit" />
        <activity android:name=".Detail" />
        <activity android:name=".CalendarScreenActivity" />
        <activity android:name=".NotepadScreenActivity" />
        <activity android:name=".ToDoScreenActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>